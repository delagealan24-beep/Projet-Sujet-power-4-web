{{define "scoreboard.gohtml"}}
<section class="card">
  <h2>Scoreboard</h2>
  {{if .}}
    <ol>
      {{range .}}
        <li>{{.Winner}} — {{.Time.Format "02/01/2006 15:04:05"}}</li>
      {{end}}
    </ol>
  {{else}}
    <p>Aucun résultat enregistré.</p>
  {{end}}
  <p><a class="button" href="/game/init">Nouvelle partie</a></p>
</section>
{{end}}
